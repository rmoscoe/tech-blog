<div class="card p-3 m-3">
  <h2 class="page-title mt-2 mb-3">New Comment</h2>
  <form id="comment-form" class="form">
    <div class="form-group my-3">
      <label for="comment-body">Comment:</label>
      <textarea id="comment-body" class="form-input w-100" rows="5" id="comment-body"
        name="comment-body">
          {{#if edit}}
        {{comment.content}}
        {{/if}}</textarea>
    </div>
    <div class="form-group my-3">
      <input id="submit-comment" class="btn text-white" type="submit"
        value="Submit" style="background-color: var(--bs-success-text)" />
    </div>
  </form>
</div>

{{#if edit}}
<script src="/js/editComment.js" type="text/javascript"></script>
{{else}}
<script src="/js/createComment.js" type="text/javascript"></script>
{{/if}}