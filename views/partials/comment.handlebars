<li class="list-group-item m-2 pb-3">
    <div class="text-light p-1 d-flex flex-nowrap justify-content-between align-content-center" style="background-color:var(--bs-tertiary-color)">
        <span class="text-capitalize fw-semibold align-self-center">{{user.username}}</span>
        <span class="align-self-center">{{dateCreated}}</span>
        {{#if author}}
        <div class="my-0">
            <button data-comment="{{id}}" class="btn btn-sm btn-light mx-2 edit-comment">
            <i class="text-success fa-solid fa-pencil"></i>
        </button>
        <button data-comment="{{id}}" class="btn btn-sm btn-light delete-comment">
            <i class="text-success fa-regular fa-trash-can"></i>
        </button>
        </div>
        {{/if}}
    </div>
    <p>{{content}}</p>
</li>

{{#if author}}
<script src="../../public/js/comment.js" type="text/javascript"></script>
{{/if}}