<section class="container justify-center">
  <div class="row justify-space-between d-flex flex-wrap flex-md-nowrap">
    <div class="card col-10 col-md-5 m-4 p-3 align-content-around">
      <h2 class="page-title mb-3">Login</h2>
      <form class="form login-form mb-3" id="login-form">
        <div class="form-group mb-3">
          <label for="username-login" class="mr-3">Username:</label>
          <input class="form-input login-form-input" type="text" id="username-login" />
        </div>
        <div class="form-group mb-3">
          <label for="password-login" class="mr-3">Password:</label>
          <input class="form-input login-form-input" type="password" id="password-login" />
        </div>
        <div class="form-group mb-3">
          <input class="btn btn-success login-form-input" type="submit" value="Login" />
        </div>
      </form>
    </div>
    <div class="card col-10 col-md-5 m-4 p-3 align-content-around">
      <h2 class="page-title mb-3">Signup</h2>
      <form class="form signup-form mb-3">
        <div class="form-group mb-3">
          <label for="username-signup" class="mr-3">Username:</label>
          <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group mb-3">
          <label for="password-signup" class="mr-3">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group mb-3">
          <input class="btn btn-success" type="submit" value="Submit">
        </div>
      </form>
    </div>
  </div>
</section>

<script src="/js/login.js"></script>
