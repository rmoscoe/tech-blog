<div class="card p-3">
    <h2 class="page-title mt-2 mb-3">New Post</h2>
    <form class="form" id="post-form">
      <div class="form-group mb-3">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" style="border-color: var(--bs-success-text)"/>
      </div>
      <div class="form-group mb-3">
        <label for="post-body">Body:</label>
        <textarea class="form-input w-100" rows="5" id="post-body" name="post-body" style="border-color: var(--bs-success-text)" form="post-form"></textarea>
      </div>
      <div class="form-group mb-3">
        <input class="btn text-white" type="submit" value="Submit" style="background-color: var(--bs-success-text)"/>
      </div>
    </form>
  </div>

  <script src="/js/createPost.js" type="text/javascript"></script>