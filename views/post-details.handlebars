<section class="card">
  <header class="d-flex justify-content-between flex-no-wrap bg-secondary align-content-center px-3">
    <h4 class="text-light text-capitalize fw-bold align-self-center">{{post.title}}</h4>
    {{#if postAuthor}}
    <div>
      <button class="btn btn-light m-2">
        <i class="text-success fa-solid fa-pencil"></i>
      </button>
      <button class="btn btn-light">
        <i class="text-success fa-regular fa-trash-can"></i>
      </button>
    </div>
    {{/if}}
  </header>
  <section class="card-body bg-light">
    <section class="card-body rounded shadow m-3 text-light"
      style="background-color:var(--bs-success-text)">
      <div class="d-flex flex-wrap flex-md-nowrap justify-content-between">
        <p class="fs-5 mx-0 px-3 text-light text-capitalize fw-semibold">
          {{post.user.username}}</p>
        <p class="fs-6 mx-0 px-3 text-end text-light">
          {{post.createdDate}}</p>
      </div>
      <div class="w-100 mx-0 px-3" style="text-align: justify">
        {{post.content}}
      </div>
    </section>
    <ul class="list-group m-3">
      {{#each comments}}
      {{>comment}}
      {{/each}}
    </ul>
  </section>
</section>

<script src="/js/post.js" type="text/javascript"></script>